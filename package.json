{
  "name": "reacttasks-backend",
  "version": "1.2.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc --project tsconfig.build.json",
    "db:mount": "docker compose up -d",
    "db:seed": "ts-node-dev --transpile-only ./src/database/scripts/seed.ts",
    "db:start": "docker compose start",
    "db:stop": "docker compose stop",
    "db:unmount": "docker compose down --volumes",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "env:create": "rimraf ./.env && ts-node-dev --transpile-only ./src/server/scripts/env.ts",
    "start": "node ./dist/index.js",
    "test:coverage": "jest --runInBand --coverage",
    "test:e2e": "jest --runInBand --testMatch **/tests/e2e/**/*.test.ts",
    "test:unit": "jest --runInBand --testMatch **/tests/unit/**/*.test.ts",
    "test:watch": "jest --runInBand --watch",
    "test": "jest --runInBand"
  },
  "keywords": [],
  "author": "KristhDev",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.3",
    "express-fileupload": "^1.4.3",
    "express-useragent": "^1.0.15",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongoose": "^8.2.2",
    "mongoose-paginate-ts": "^1.3.1",
    "nodemailer": "^6.9.12",
    "nodemailer-html-to-text": "^3.2.0",
    "winston": "^3.12.0",
    "winston-timestamp-colorize": "^1.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@jest-mock/express": "^2.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-fileupload": "^1.4.4",
    "@types/express-useragent": "^1.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.28",
    "@types/nodemailer": "^6.4.14",
    "@types/nodemailer-html-to-text": "^3.1.3",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.2"
  },
  "pnpm": {
    "overrides": {
      "ip@=2.0.0": ">=2.0.1",
      "express@<4.19.2": ">=4.19.2"
    }
  }
}
